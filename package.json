{
    "name": "root",
    "version": "1.3.3",
    "description": "Decentralized impact-driven 2-sided marketplace to provide financial services to charities and vulnerable beneficiaries.",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/impactMarket/api.git"
    },
    "author": "impact-market",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/impactMarket/api/issues"
    },
    "homepage": "https://github.com/impactMarket/api#readme",
    "engines": {
        "node": "14.15.1"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "lerna": "^4.0.0"
    },
    "scripts": {
        "start": "lerna exec --scope @impactmarket/api yarn start",
        "serve": "node packages/impactmarket-api/dist/app.js",
        "worker": "node packages/impactmarket-worker/dist/src/index.js",
        "worker-dev": "lerna exec --scope @impactmarket/worker yarn worker-dev",
        "build": "lerna exec yarn build",
        "test": "lerna exec --concurrency 1 yarn test",
        "precoverage:ci": "NODE_ENV=test sequelize db:migrate --env ci",
        "coverage:ci": "nyc --reporter=lcov lerna exec --concurrency 1 yarn test",
        "prettier": "prettier --write \"./**/*.ts\"",
        "eslint": "eslint --fix \"./**/*.ts\"",
        "prettier-no-fix": "prettier --write \"./**/*.ts\"",
        "eslint-no-fix": "eslint --fix \"./**/*.ts\""
    }
}
